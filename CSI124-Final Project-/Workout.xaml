<Window x:Class="CSI124_Final_Project_.Workout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSI124_Final_Project_"
        mc:Ignorable="d"
        Title="Workout" Height="450" Width="800">
    <Canvas Background="#FF75CCBE">
        <ListView x:Name="lvExercises" HorizontalAlignment="Left" Height="295" Margin="90,39,0,0" VerticalAlignment="Top" Width="465" d:ItemsSource="{d:SampleData ItemCount=5}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" 
                                    DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Calories Burned" 
                                    DisplayMemberBinding="{Binding ColoriesBurned}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Canvas>
</Window>
